<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="150vp"
    ohos:width="120vp"
    ohos:alignment="center">

    <Image
        ohos:id="$+id:image"
        ohos:height="150vp"
        ohos:width="120vp"
        ohos:layout_alignment="center"
        ohos:scale_mode="stretch"/>

    <Image
        ohos:id="$+id:image2"
        ohos:image_src="$media:selectedicon"
        ohos:scale_mode="stretch"
        ohos:visibility="hide"
        ohos:height="150vp"
        ohos:layout_alignment="center"
        ohos:width="120vp"/>
</DependentLayout>